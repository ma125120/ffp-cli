{
  "name": "ffp-cli",
  "version": "0.2.1",
  "description": "前端工程化的工具支持",
  "main": "index.js",
  "bin": {
    "ffp": "bin/index.js"
  },
  "repository": "git@github.com:ma125120/ffp-cli.git",
  "scripts": {
    "test": "jest",
    "bd": "yarn tsc --declaration",
    "w": "tsc --watch",
    "cz": "cz",
    "release": "standard-version",
    "release:rc": "standard-version --prerelease rc",
    "pup": "npm run release && git push --follow-tags origin main",
    "pub": "npm run pup && npm publish",
    "prepare": "npx husky install"
  },
  "keywords": [
    "fp",
    "fp-cli",
    "jest",
    "travis",
    "eslint",
    "commit",
    "release"
  ],
  "author": "马鹏达",
  "license": "MIT",
  "dependencies": {
    "commander": "^7.1.0",
    "js-yaml": "^4.0.0",
    "prompts": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^26.6.3",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "eslint": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.[jt]sx?": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
